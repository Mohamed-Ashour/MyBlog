<form method="post" action="/admin/edit_blog/<%= @blogs[:id] %>">
	<label for="title">Blog title:</label>
	<input type="text" name="title" value="<%= @blogs[:title] %>" id="title" autofocus>
	<label for="summary">Blog summary:</label>
	<textarea name="summary" rows="5" id="summary"><%= @blogs[:summary] %></textarea>
	<label for="content">Blog content:</label>
	<textarea name="content" rows="16" id="content"><%= @blogs[:content] %></textarea>
	<button type="submit">Edit Blog</button>
</form>
